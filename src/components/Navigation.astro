---
// Navigation component without logo
---

<nav class="bg-midnight-900/95 backdrop-blur-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Brand -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <span class="text-xl font-bold text-electric-blue">DJ Otter Claw</span
          >
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a
            href="/"
            class="text-midnight-200 hover:text-electric-blue transition-colors duration-200 px-3 py-2 text-sm font-medium"
          >
            Home
          </a>
          <a
            href="/about"
            class="text-midnight-200 hover:text-electric-blue transition-colors duration-200 px-3 py-2 text-sm font-medium"
          >
            About
          </a>
          <a
            href="/services"
            class="text-midnight-200 hover:text-electric-blue transition-colors duration-200 px-3 py-2 text-sm font-medium"
          >
            Services
          </a>
          <a
            href="/booking"
            class="bg-electric-blue hover:bg-cyber-purple text-midnight-950 transition-colors duration-200 px-4 py-2 rounded-lg text-sm font-medium"
          >
            Book Now
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="bg-midnight-800 inline-flex items-center justify-center p-2 rounded-md text-midnight-200 hover:text-electric-blue hover:bg-midnight-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-electric-blue transition-colors duration-200"
          aria-controls="mobile-menu"
          aria-expanded="false"
          onclick="toggleMobileMenu()"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger icon -->
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-midnight-900/98">
      <a
        href="/"
        class="text-midnight-200 hover:text-electric-blue block px-3 py-2 text-base font-medium transition-colors duration-200"
      >
        Home
      </a>
      <a
        href="/about"
        class="text-midnight-200 hover:text-electric-blue block px-3 py-2 text-base font-medium transition-colors duration-200"
      >
        About
      </a>
      <a
        href="/services"
        class="text-midnight-200 hover:text-electric-blue block px-3 py-2 text-base font-medium transition-colors duration-200"
      >
        Services
      </a>
      <a
        href="/booking"
        class="bg-electric-blue hover:bg-cyber-purple text-midnight-950 block px-3 py-2 rounded-lg text-base font-medium transition-colors duration-200 mx-3 mt-4"
      >
        Book Now
      </a>
    </div>
  </div>
</nav>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById("mobile-menu");
    if (menu) {
      menu.classList.toggle("hidden");
    }
  }

  // Make toggleMobileMenu available globally
  (window as any).toggleMobileMenu = toggleMobileMenu;
</script>
