---
export interface Props {
  title: string;
  description: string;
  features: string[];
  pricing: string;
  icon: string;
  accentColor: string;
  id: string;
}

const { title, description, features, pricing, icon, accentColor, id } =
  Astro.props;
---

<div
  class="bg-midnight-800 border border-midnight-700 rounded-xl p-8 hover:border-electric-blue transition-all duration-300 group h-full flex flex-col"
  id={id}
>
  <!-- Service Icon and Header -->
  <div class="mb-6">
    <div
      class={`w-20 h-20 bg-${accentColor}/20 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:bg-${accentColor}/30 transition-colors duration-300`}
    >
      <div class={`text-3xl text-${accentColor}`} set:html={icon} />
    </div>

    <h3 class="text-2xl font-bold text-midnight-50 mb-4 text-center">
      {title}
    </h3>

    <p class="text-midnight-200 text-center mb-6 leading-relaxed">
      {description}
    </p>
  </div>

  <!-- Features List -->
  <div class="mb-8 flex-grow">
    <h4 class="text-lg font-semibold text-electric-blue mb-4">
      What's Included:
    </h4>
    <ul class="space-y-3">
      {
        features.map((feature) => (
          <li class="flex items-start text-midnight-100">
            <svg
              class={`w-5 h-5 text-${accentColor} mr-3 mt-0.5 shrink-0`}
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>
            <span>{feature}</span>
          </li>
        ))
      }
    </ul>
  </div>

  <!-- Pricing -->
  <div class="text-center border-t border-midnight-700 pt-6 mt-auto">
    <p class="text-sm text-midnight-300 mb-2">Starting from</p>
    <p class="text-3xl font-bold text-electric-blue mb-6">{pricing}</p>

    <a
      href="/booking"
      class={`inline-block bg-${accentColor}/10 hover:bg-${accentColor} text-${accentColor} hover:text-midnight-950 font-semibold px-6 py-3 rounded-lg transition-all duration-300 transform hover:scale-105`}
    >
      Get Quote
    </a>
  </div>
</div>
